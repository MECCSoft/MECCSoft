<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>

	</ui:style>
	<g:HTMLPanel>
		<g:FlowPanel>
			<g:HTML wordWrap="true">
				<h2>Contact us:</h2>
				We are excited for the opportunity to assist you in your business needs.  Fill out
				the below information or sending us a direct email at <a href='mailto:info@MECCSoft.com'>info@MECCSoft.com</a> and we will get back to you as soon as we can.  
				<br/>
				<br/>
			</g:HTML>
			<g:Label text="Name:"/><g:TextBox width="245px" ui:field="txtName">
			</g:TextBox>
			<g:Label text="Company Name:"/><g:TextBox width="245px" ui:field="txtCompany">
			</g:TextBox>
			<g:Label text="Email:"/><g:TextBox width="245px" ui:field="txtEmail">
			</g:TextBox>
			<g:Label text="General description of requirements:"/>
			<g:TextArea width="450px" visibleLines="8" ui:field="txtBody">
			</g:TextArea>
			<g:HTML wordWrap="true"><br/></g:HTML>
			<g:Button ui:field="submitButton">Submit</g:Button>
			<g:Label ui:field="resultLabel" styleName="EmailResultLabel"/>
		</g:FlowPanel>
	</g:HTMLPanel>
</ui:UiBinder> 